<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/myviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="36dp"
        />

    <com.thecodebuilders.FontFamily.ProximaNovaSoftBold
        android:id="@+id/skipthetour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="skip the tour"
        android:onClick="Click"
        android:textColor="#000000"
        android:textSize="18sp"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"/>

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/page_indicator"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:id="@+id/intro_menu_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/intro_bblogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:src="@drawable/bblogo"/>

        <HorizontalScrollView
            android:id="@+id/intro_menu_scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/intro_bblogo"
            android:gravity="center_vertical"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/intro_menu_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/intro_playlists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/menu_margin"
                    android:adjustViewBounds="true"
                    android:maxWidth="40dp"
                    android:src="@drawable/playlists" />

                <ImageView
                    android:id="@+id/intro_favorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/menu_margin"
                    android:adjustViewBounds="true"
                    android:maxWidth="40dp"
                    android:src="@drawable/favorites" />

                <ImageView
                    android:id="@+id/intro_movies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/menu_margin"
                    android:adjustViewBounds="true"
                    android:maxWidth="35dp"
                    android:src="@drawable/movies" />

                <ImageView
                    android:id="@+id/intro_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/menu_margin"
                    android:adjustViewBounds="true"
                    android:maxWidth="45dp"
                    android:src="@drawable/music" />

                <ImageView
                    android:id="@+id/intro_nightlights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/menu_margin"
                    android:adjustViewBounds="true"
                    android:maxWidth="50dp"
                    android:src="@drawable/nightlights" />

                <ImageView
                    android:id="@+id/intro_audiobooks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/menu_margin"
                    android:adjustViewBounds="true"
                    android:maxWidth="45dp"
                    android:src="@drawable/audiobooks" />

                <ImageView
                    android:id="@+id/intro_soundboards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/menu_margin"
                    android:adjustViewBounds="true"
                    android:maxWidth="35dp"
                    android:src="@drawable/soundboards" />

                <ImageView
                    android:id="@+id/intro_hearingimpaired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/menu_margin"
                    android:adjustViewBounds="true"
                    android:maxWidth="40dp"
                    android:src="@drawable/hearingimpaired" />
            </LinearLayout>
        </HorizontalScrollView>
        <ImageView
            android:id="@+id/intro_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/small_margin"
            android:adjustViewBounds="true"
            android:maxWidth="20dp"
            android:src="@drawable/settings" />

        </RelativeLayout>


</RelativeLayout>

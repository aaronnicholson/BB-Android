<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:background="#CCCCCC"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            android:background="@drawable/upper_round"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView

                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/back_img" />

            <com.thecodebuilders.FontFamily.ProximaNovaSoftRegular
                android:id="@+id/back_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:text="Settings"
                android:layout_marginLeft="5dp"
                android:textColor="#2776C3"
                android:textSize="14sp" />

            <com.thecodebuilders.FontFamily.ProximaNovaSoftRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.65"
                android:gravity="center|left"
                android:text="Email/Password"
                android:textColor="#070709"
                android:textSize="18sp" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.85">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:weightSum="0.85">


                <RelativeLayout
                    android:id="@+id/confirm_existing_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/upper_round"
                    android:orientation="horizontal">

                    <com.thecodebuilders.FontFamily.ProximaNovaSoftRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="Confirm Existing Password"
                        android:textColor="#070709"
                        android:textSize="18sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/new_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:background="#FFFFFF"

                    android:orientation="horizontal">

                    <com.thecodebuilders.FontFamily.ProximaNovaSoftRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="New Password (be sure to write it..."
                        android:textColor="#070709"
                        android:textSize="18sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/new_emailaddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/lower_round"
                    android:orientation="horizontal">

                    <com.thecodebuilders.FontFamily.ProximaNovaSoftRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="New Email Address (make sure it..."
                        android:textColor="#070709"
                        android:textSize="18sp" />


                </RelativeLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>

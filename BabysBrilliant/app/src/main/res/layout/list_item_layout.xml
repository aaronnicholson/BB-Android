<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:padding="10dp"
    android:id="@+id/list_item_container"
    >


    <!--ratio is .56-->
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="202dp"
        android:layout_alignParentBottom="true"

        >

        <ImageView
            android:id="@+id/thumbnailImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/textBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_area_height"
            android:layout_alignBottom="@id/thumbnailImage"
            android:background="#f00"></RelativeLayout>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="300dp"
            android:layout_height="@dimen/text_area_height"
            android:layout_alignBottom="@id/thumbnailImage"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="7dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/playlist_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="@dimen/product_icon_width"
                android:src="@drawable/playlists"
                />

            <ImageView
                android:id="@+id/favorites_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="@dimen/product_icon_width"
                android:layout_marginLeft="10dp"
                android:src="@drawable/favorites"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/preview_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="@dimen/product_icon_width"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="7dp"
            android:text="\uf06e"
            android:textSize="26sp"
            android:textColor="#fff"
            />


        <TextView
            android:id="@+id/priceText"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-40dp"
            android:layout_marginTop="10dp"
            android:background="#00ff00"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:rotation="45"
            android:textColor="#333333"
            android:textSize="22sp" />

    </RelativeLayout>


</RelativeLayout>
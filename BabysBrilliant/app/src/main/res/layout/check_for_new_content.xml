<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:background="#CCCCCC"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            android:background="@drawable/upper_round"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/back_img" />

            <com.thecodebuilders.FontFamily.ProximaNovaSoftRegular
                android:id="@+id/back_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:layout_marginLeft="5dp"
                android:text="Settings"
                android:clickable="true"
                android:textColor="#2776C3"
                android:textSize="14sp" />

            <com.thecodebuilders.FontFamily.ProximaNovaSoftRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.65"
                android:gravity="center|left"
                android:text="New Content"
                android:textColor="#070709"
                android:textSize="18sp" />


        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.85"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:dividerHeight="1dp"
            android:id="@+id/listView" />

        <com.thecodebuilders.FontFamily.ProximaNovaSoftRegular
            android:id="@+id/...Checking..."
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Content up-to-date"
            android:textColor="#070709"
            android:textSize="18sp" />


    </LinearLayout>
</RelativeLayout>
